{
    "parserOptions": {
        "project": "./tsconfig.json" // Adjust the path to your tsconfig.json file
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "root": true,
    "extends": [
        "next/core-web-vitals",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended-type-checked"
    ],
    "rules": {
        "complexity": [
            "error",
            5
        ],
        "curly": "error",
        "eqeqeq": "error",
        "func-style": [
            "error",
            "declaration"
        ],
        "no-eval": "error",
        "no-ternary": "warn",
        "no-eq-null": "error",
        "max-params": [
            "warn",
            4
        ],
        "max-lines": [
            "warn",
            150
        ],
        "max-depth": [
            "warn",
            4
        ],
        "no-inline-comments": "error",
        "no-warning-comments": "error",
        "multiline-comment-style": [
            "error",
            "separate-lines"
        ],
        "no-var": "error",
        "no-shadow": "warn"
    }
}